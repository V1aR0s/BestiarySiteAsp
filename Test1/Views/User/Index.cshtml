@{
    Layout = "_LayoutAdmin";
}

@model IEnumerable<User>
<div><a class = "btn-primary btn" asp-action="Create">Создать нового пользователя</a></div>
<table class="table table-striped table-dark" >
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(t => t.Id)</td>
            <td>@Html.DisplayNameFor(t => t.UserName)</td>
            <td>@Html.DisplayNameFor(t => t.Email)</td>
            <td>@Html.DisplayNameFor(t => t.Year)</td>
            <td>Роли</td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (User user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Year</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Roles" asp-action="EditUserRoles"
                   asp-route-id="@user.Id">Права доступа</a>
                </td>
                <td><a asp-action="Edit" asp-controller="User" asp-route-id="@user.Id">Edit</a></td>
                <td>
                    <a asp-action="ChangePassword" asp-controller="User" asp-route-id="@user.Id">
                        Изменить
                        пароль
                    </a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>